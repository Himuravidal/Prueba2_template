<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.desafiolatam.prueba2_template.view.details.DetailBooksActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/authorTv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Autor"
        app:layout_constraintEnd_toStartOf="@+id/authorET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/authorET"
        android:layout_width="270dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:hint="Ingresa el Autor"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/authorTv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reseñaTv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dp"
        android:text="Reseña"
        app:layout_constraintBaseline_toBaselineOf="@+id/descriptionET"
        app:layout_constraintEnd_toStartOf="@+id/descriptionET"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Reseña" />

    <EditText
        android:id="@+id/descriptionET"
        android:layout_width="270dp"
        android:layout_height="147dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_orange_light"
        android:hint="Ingresa una Reseña"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reseñaTv"
        app:layout_constraintTop_toBottomOf="@+id/authorET" />

    <TextView
        android:id="@+id/progressTv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dp"
        android:text="Progreso"
        app:layout_constraintEnd_toStartOf="@+id/progressSB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressSB" />

    <SeekBar
        android:id="@+id/progressSB"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="228dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressTv"
        app:layout_constraintTop_toBottomOf="@+id/descriptionET" />

</android.support.constraint.ConstraintLayout>
